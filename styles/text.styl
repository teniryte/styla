antialias(val)
  if val == true
    -webkit-font-smoothing: antialiased;
    -webkit-text-size-adjust: 100%;
    text-size-adjust: 100%;
    text-rendering: optimizeLegibility;
  if val == none
    -webkit-font-smoothing: subpixel-antialiased;
    -webkit-text-size-adjust: none;
    text-size-adjust: none;
    text-rendering: auto;

selection(val)
  -webkit-touch-callout: val;
  -webkit-user-select: val;
  -khtml-user-select: val;
  -moz-user-select: val;
  -ms-user-select: val;
  user-select: val;

disable-selection()
  -webkit-touch-callout none;
  -webkit-user-select none;
  -khtml-user-select none;
  -moz-user-select none;
  -ms-user-select none;
  user-select none;

// Props =========================================================================

alias(val)
  if val == anti
    antialias: true;

selection(val)
  if val == none
    disable-selection();
  else
    selection-background(val);

defaultTextStyles()
  h1, h2, h3, h4, h5, h6
    font-weight: 600;
    margin-bottom: 1em;

    &:first-child
      margin-top: 0;

    &:last-child
      margin-bottom: 0;

  h1
    font-size: 2.1em;

  h2
    font-size: 1.9em;

  h3
    font-size: 1.7em;

  h4
    font-size: 1.5em;

  h5
    font-size: 1.3em;

  h6
    font-size: 1.1em;

  ul, ol
    margin-left: 15px;

  p
    margin-bottom: 10px;

    &:last-child
      margin-bottom: 0;

  sub, sup
    font-size: 75%;
    line-height: 0;
    position: relative;
    vertical-align: baseline;

  sup
    top: -0.5em;

  sub
    bottom: -0.25em;

  b, strong
    font-weight: 600;

  i, em
    font-style: italic;

  u
    text-decoration: underline;

  s
    text-decoration: line-through;

  blockquote
    border-left: 2px solid blueGrey(100);
    padding-left: 10px;
    font-size: 0.9em;

    &:last-child
      margin-bottom: 0;

  pre
    font-family: 'Hack', 'Roboto Mono', 'Menlo', 'Consolas', monospace;
    font-size: 0.9em;
    background: #fff;
    border-radius: 2px;
    border: 1px solid blueGrey(200);
    padding: 5px 10px;

  .ql-indent-1
    margin-left: 10px;
  .ql-indent-2
    margin-left: 20px;
  .ql-indent-3
    margin-left: 30px;
  .ql-indent-4
    margin-left: 40px;
  .ql-indent-5
    margin-left: 50px;
  .ql-indent-6
    margin-left: 60px;
  .ql-indent-7
    margin-left: 70px;
  .ql-indent-8
    margin-left: 80px;
  .ql-font-serif
    font-family: 'Georgia', 'Times New Roman', sans-serif;
  .ql-font-monospace
